<resources>
    <!-- Base application theme. -->
    <style name="Theme.PodcastApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/summary_orange</item>
        <item name="colorPrimaryVariant">@color/summary_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/summary_orange</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
    </style>

    <style name="Theme.RemoveSplashScreenTheme" parent="@style/Theme.PodcastApp">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="LightTheme" parent="@style/Theme.PodcastApp">
        <item name="textColor">@color/textcolor</item>
        <item name="metaTextColor">@color/metaTextColor</item>
        <item name="bgColor">@color/backgroundcolor</item>
    </style>

    <style name="DarkTheme" parent="@style/Theme.PodcastApp">
        <item name="textColor">@color/textnightcolor</item>
        <item name="metaTextColor">@color/metanightTextColor</item>
        <item name="bgColor">@color/backnightgroundcolor</item>
    </style>

    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">#ffffff</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#f4511e</item>
        <item name="android:progressTint">@color/metanightTextColor</item>
        <item name="android:thumbTint">@color/summary_orange</item>
    </style>
</resources>